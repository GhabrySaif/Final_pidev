<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ForgetPasswordController"
            prefHeight="300.0" prefWidth="500.0">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Mot de passe oublié" styleClass="title-label"/>

        <VBox spacing="10" maxWidth="300">
            <TextField fx:id="emailField" promptText="Votre adresse email"/>
        </VBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>

        <Button text="Envoyer lien de réinitialisation" onAction="#handleResetPassword" styleClass="add-button"/>
        <Button text="Retour" onAction="#handleBackToLogin" styleClass="back-button"/>
    </VBox>
</AnchorPane>
